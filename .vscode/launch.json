    "version": "0.2.0",
    "configurations": [

        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'dns_audit'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=dns_audit",
                    "--package=dns_audit"
                ],
                "filter": {
                    "name": "dns_audit",
                    "kind": "bin"
                }
            },
            "args": [
                "-f",
                "/home/ben/int.hosts"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'dns_audit'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=dns_audit",
                    "--package=dns_audit"
                ],
                "filter": {
                    "name": "dns_audit",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}